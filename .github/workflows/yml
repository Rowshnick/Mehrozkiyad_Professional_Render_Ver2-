name: Run Bash Script

on:
  push:
    branches: 
      - main
  workflow_dispatch:

jobs:
  run-script:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v4

    - name: Show repo files (debug)
      run: ls -R .

    - name: Make script executable
      run: chmod +x ./script.sh

    - name: Run script
      run: ./script.sh
